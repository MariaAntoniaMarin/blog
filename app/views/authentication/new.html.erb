<div class="header">
  <h1>Login</h1>
</div>

<%= form_tag '/login' do %>
  <div class="form">
    <%= label_tag :username %> 
    <%= text_field_tag :username %>
  </div>
  <div class="form">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="btn">
    <%= submit_tag "login", class: "btn btn-outline-success" %>
  </div>
<%end%>

<style>
h1 {
  color: #C0C0C0;
  font-family: 'Helvetica Neue', sans-serif;
  font-size: 70px;
  letter-spacing: -1px;
  line-height: 1;
  text-align: center;
  font-color: #5F9EA0;
}

div.header{
  background-color: #708090;
  padding: 15px;
}

div.form {
  padding: 15px;
  margin: 0 0 0 70px;
}

div.btn {
  margin:  20px 70px;
}
</style>
