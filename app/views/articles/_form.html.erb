<%= form_with model: article do |form| %>
  <div class="form">
    <%= form.label :title %><br>
    <%= form.text_field :title, :rows => 1, :maxlength=> 100 %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form">
    <%= form.label :body %><br>
    <%= form.text_area :body, :rows => 5, :cols => 100 %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %><div>
    <% end %>
  </div>

  <div class="form">
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <div class = "btn">
    <%= form.submit :Create, class: 'btn btn-success'%>
  </div>
<% end %>

<style>
div.form {
  padding: 15px;
  margin: 0 0 0 70px;
}

div.btn {
  margin:  20px 70px;
}
</style>